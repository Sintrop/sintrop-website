generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(cuid())
  url         String?
  title       String
  description String
  keywords    String   @default("")
  bannerUrl   String
  bannerAlt   String
  bodyPost    String
  language    String
  views       Int      @default(0)
  createdAt   DateTime @default(now())
}